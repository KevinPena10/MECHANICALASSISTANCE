@model MechanicalAssistance.Web.Data.Entities.ProductBrandEntity

@{
    ViewData["Title"] = "Create";
}

<h2> Create - Product Brand</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="BrandName" class="control-label"></label>
                <input asp-for="BrandName" class="form-control" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align:end">
                <button type="submit" value="Create" class="btn btn-success"> Create <i class="glyphicon glyphicon-save"></i></button>
            </div>
            <a asp-action="index" ><i class="glyphicon glyphicon-arrow-left"></i> Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

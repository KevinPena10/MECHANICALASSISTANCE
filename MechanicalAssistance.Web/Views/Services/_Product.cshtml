@model MechanicalAssistance.Web.Models.ProductViewModel

<div class="form-group">
    <label asp-for="ProductName" class="control-label"></label>
    <input asp-for="ProductName" class="form-control" />
    <span asp-validation-for="ProductName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price" class="control-label"></label>
    <input asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ProductFile" class="control-label"></label>
    <input asp-for="ProductFile" type="file" class="form-control" />
    <span asp-validation-for="ProductFile" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="ProductBrandId" class="control-label"></label>
    <select asp-for="ProductBrandId" asp-items="Model.ProductBrands" class="form-control"></select>
    <span asp-validation-for="ProductBrandId" class="text-danger"></span>
</div>